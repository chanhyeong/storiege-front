{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": ["react"],
    "extends": "eslint:recommended",
    "rules": {
        "indent": ["error", 2],
        "eqeqeq": ["error", "always"],
        "radix": ["error", "always"],
        "semi-style": ["error", "last"],
        "template-curly-spacing": ["error", "always"],
        "react/jsx-uses-vars": "error"
    }
}